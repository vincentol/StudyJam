  <body>

    <!-- Top -->
    <!-- Profile -->
    <div class="top">

		<!-- User Icon -->
		<div id="profile">
						<div id="profileIcon">
              {{#if version2}}
              <button onclick="viewUser()" class="btn btn-info btn-sm" id="dropbtn">
                <span class="glyphicon glyphicon-user">
                </span> Account
              </button>
              {{else}}
              <button onclick="viewUser()"
										class="btn btn-info btn-sm dropbtn" id="dropbtn">
										<span class="glyphicon glyphicon-user">
									</span> Account
							</button>
              {{/if}}

							<!-- Modal for profile -->
							<div id="myDropdown" class="dropdown-content">
                  <a href="#" data-toggle="modal" data-target="#myModal">Profile</a>
                  <a href="/">Sign out</a>

              </div>
            </div>
    </div>

        <div id="myModal" class="modal fade" style="padding-top: 100px">
            <div class="modal-content">
                <div class="modal-header">
                    <span class="close" data-toggle="modal" data-target="#myModal">&times;</span>
                    <h2>{{currFN}} {{currLN}}</h2>
                </div>
                <div class="modal-body">
                    <img src="/images/placeholder.png" style="height: 80px;">
                    <p>UCSD, Class of 2019</p>
                    <p>Major: Cognitive Science</p>
                    <p>Minor: Computer Science</p>
                    <p>GPA: 3.4</p>
                </div>
            </div>
        </div>


      <!-- Search Bar -->
      <div class="search">
        <form>
          <input type="text" id="searchBar" name="search" onkeyup="searchFunction()" placeholder="Search Classes..">
        </form>
      </div>

      <!-- Breadcrumb -->
      <ol class="breadcrumb">
        <li class="active"><b>Home</b></li>
      </ol>
    </div>
    <!-- END TOP -->

    <!-- Contents of App -->
    <div id="main">

      <h1>Classes</h1>
      <button type="button" class="button1" data-toggle="modal" data-target="#newClassModal">
        <center>New Class</center>
      </button>

      <!--Modal for making a new class -->
      <div id="newClassModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <form id="addClassForm" action="javascript:addClass();">
                Class Name:<br/>
                <input type="text" name="newClassName" required>
                <br/><br/>
                <input type="submit" class="btn btn-default" value="Submit">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- End Modal -->

      <!-- List of Classes -->
        <div id="classList">
          <ul id="searchUL">
            {{#each classes}}
            <li><a href="classPage/{{className}}"><div class="mycard3"><p>{{className}}<br/>Score: {{classScore}}</p></div></a></li>
            {{/each}}
          </ul>
          <br/>
        </div>



    </div>
    <!-- End Main Content -->


