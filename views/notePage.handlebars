<!doctype html>
<html>
  <head>
    <title>StudyJam</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">

  </head>

  <body>
    <div class="rightSide" style="margin-left: 10px; margin-top: 10px">
      <div id="status" class="nochange">no change</div>
      <textarea id="notes" name="notes" cols="141" rows="28" placeholder="Take Notes Here">{{myData}}</textarea>
    </div>

      <div class="sidebar">
        <button type="button" class="addvocabterm" data-toggle="modal" data-target="#newClassModal1">Add Vocab Term</button>
        <button type="button" class="addquizquestion" data-toggle="modal" data-target="#newClassModal2">Add Quiz Question</button>
        </br>
        </br>
        </br>
        <button type="button" onclick="goBack()">Go Back To Class Page</button>
      </div>
      <!--Modal for making a new class -->
      <div id="newClassModal1" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <form id="vocabForm" action="javascript:addVocab()">
                Vocab Term:<br/>
                <input type="text" name="Term"> <br>
                Definition:<br/>
                <input type="text" name="Def">
                <br/><br/>
                <input type="submit" class="btn btn-default" value="Submit">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- End Modal -->

      <div id="newClassModal2" class="modal fade" role="dialog">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <form id="quizForm" action="javascript:addQuizQ()">
                Question:<br/>
                <input type="text" name="Term"> <br>
                Answer:<br/>
                <input type="text" name="Def">
                <br/><br/>
                <input type="submit" class="btn btn-default" value="Submit">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
              </form>
            </div>
          </div>
        </div>
      </div>

